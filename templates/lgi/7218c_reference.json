    "platformName": "7218c_reference",
    "os": "linux",
    "arch": {
        "arch": "arm",
        "variant": "v7"
    },
    "rdk": {
        "version": "2020Q4",
        "supportedFeatures": [
            "Controller",
            "DeviceInfo",
            "Monitor",
            "OCDM",
            "TraceControl",
            "WifiManager",
            "com.comcast.CoPilot",
            "com.comcast.DeviceProvisioning",
            "com.comcast.FrameRate",
