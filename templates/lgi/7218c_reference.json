    "hardware": {
        "graphics": true
    },
    "storage": {
        "persistent": {
            "storageDir": "/tmp/data",
            "maxSize": "100M"
        }
    },
    "gpu": {
        "extraMounts": [
            {
                "source": "/usr/share/X11/xkb",
                "destination": "/usr/share/X11/xkb",
                "type": "bind",
                "options": [
                    "rbind",
                    "nosuid",
                    "nodev",
                    "ro"
                ]
            },
            {
                "source": "/tmp/nxserver_ipc",
                "destination": "/tmp/nxserver_ipc",
                "type": "bind",
                "options": [
                    "bind",
                    "ro"
                ]
            }
        ],
        "envvar": [
            "LD_PRELOAD=/usr/lib/libnexus.so:/usr/lib/libnxclient.so:/usr/lib/libwayland-client.so.0:/usr/lib/libwayland-egl.so.0"
        ],
        "devs": [
            {
                "type": "c",
                "path": "/dev/nexus",
                "major": 33,
                "minor": 0,
                "access": "rw"
            }
